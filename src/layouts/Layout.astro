---
interface Props {
	title?: string;
}

const { title = "Psicolog√≠a Infantil Especializada" } = Astro.props;
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Comfortaa:wght@400;600;700&family=Open+Sans:wght@400;600&display=swap" rel="stylesheet">
		<title>{title}</title>
	</head>
	<body>
		<slot />
	</body>
</html>

<style is:global>
	:root {
		--color-rose: #eca5a9;
		--color-lavender: #d2b5d3;
		--color-cream: #f6deba;
		--color-mint: #c9e1e1;
		--color-peach: #ecba99;
	}

	html,
	body {
		margin: 0;
		width: 100%;
		font-family: 'Open Sans', sans-serif;
		color: #333;
		background-color: #fff;
	}

	h1, h2, h3, h4, h5 {
		font-family: 'Comfortaa', cursive;
	}

	img {
		max-width: 100%;
	}
</style>
