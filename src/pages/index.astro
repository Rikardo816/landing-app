		color: #333;
		font-weight: 600;
		transition: color 0.3s;
	}

	.nav-links a:hover {
		color: var(--color-lavender);
	}

	/* Button styles */
	.btn {
		display: inline-block;
		padding: 12px 24px;
		background-color: var(--color-lavender);
		color: white;
		border-radius: 30px;
		text-decoration: none;
		font-weight: 600;
		transition: transform 0.3s, background-color 0.3s;
		border: none;
		cursor: pointer;
	}

	.btn:hover {
		transform: translateY(-3px);
		background-color: var(--color-rose);
	}

	.whatsapp-btn {
		display: flex;
		align-items: center;
		gap: 10px;
		background-color: #25D366;
	}

	.whatsapp-btn:hover {
		background-color: #1DA851;
	}

	/* Hero section */
	.hero {
		background: linear-gradient(135deg, var(--color-mint) 0%, white 100%);
		min-height: 100vh;
		display: flex;
		align-items: center;
		padding-top: 80px;
	}

	.hero-content {
		display: flex;
		align-items: center;
		gap: 40px;
	}

	.hero .text-content {
		flex: 1;
	}

	.hero h1 {
		font-size: 2.5rem;
		margin-bottom: 20px;
		color: #333;
	}

	.hero p {
		font-size: 1.2rem;
		margin-bottom: 30px;
		color: #555;
	}

	.hero .image-content {
		flex: 1;
	}

	/* Puzzle animation in hero */
	.puzzle-container {
		position: relative;
		width: 400px;
		height: 400px;
		margin: 0 auto;
	}

	.puzzle-piece {
		position: absolute;
		width: 150px;
		height: 150px;
		border-radius: 30px;
		animation: float 4s infinite ease-in-out;
	}

	.puzzle-piece:nth-child(1) {
		background-color: var(--color-rose);
		top: 0;
		left: 0;
		clip-path: path('M 0,0 H 120 V 30 H 150 V 120 H 120 V 150 H 30 V 120 H 0 Z');
		animation-delay: 0s;
	}

	.puzzle-piece:nth-child(2) {
		background-color: var(--color-lavender);
		top: 0;
		right: 0;
		clip-path: path('M 0,0 H 120 V 30 H 150 V 120 H 120 V 150 H 30 V 120 H 0 V 30 Z');
		transform: rotate(90deg);
		animation-delay: 1s;
	}

	.puzzle-piece:nth-child(3) {
		background-color: var(--color-cream);
		bottom: 0;
		right: 0;
		clip-path: path('M 0,0 H 120 V 30 H 150 V 120 H 120 V 150 H 30 V 120 H 0 V 30 Z');
		transform: rotate(180deg);
		animation-delay: 2s;
	}

	.puzzle-piece:nth-child(4) {
		background-color: var(--color-peach);
		bottom: 0;
		left: 0;
		clip-path: path('M 0,0 H 120 V 30 H 150 V 120 H 120 V 150 H 30 V 120 H 0 V 30 Z');
		transform: rotate(270deg);
		animation-delay: 3s;
	}

	@keyframes float {
		0% { transform: translateY(0) rotate(0deg); }
		50% { transform: translateY(-10px) rotate(5deg); }
		100% { transform: translateY(0) rotate(0deg); }
	}

	/* About section */
