	}

	/* Tree animation in about section */
	.tree-container {
		position: relative;
		width: 400px;
		height: 500px;
		margin: 0 auto;
	}

	.tree-trunk {
		position: absolute;
		width: 40px;
		height: 250px;
		background-color: var(--color-peach);
		bottom: 0;
		left: 50%;
		transform: translateX(-50%);
		border-radius: 10px;
	}

	.tree-branches {
		position: absolute;
		width: 300px;
		height: 300px;
		background-color: var(--color-mint);
		border-radius: 50%;
		bottom: 200px;
		left: 50%;
		transform: translateX(-50%);
		animation: sway 8s infinite ease-in-out;
		box-shadow: inset 20px -20px 0 var(--color-cream), 
					inset -20px 20px 0 var(--color-lavender),
					inset 50px 50px 0 var(--color-rose);
	}

	@keyframes sway {
		0% { transform: translateX(-50%) rotate(0deg); }
		25% { transform: translateX(-48%) rotate(-5deg); }
		50% { transform: translateX(-50%) rotate(0deg); }
		75% { transform: translateX(-52%) rotate(5deg); }
		100% { transform: translateX(-50%) rotate(0deg); }
	}

	/* Services section */
	.services {
		padding: 100px 0;
		background-color: var(--color-cream);
		background-image: linear-gradient(135deg, var(--color-cream) 0%, white 100%);
